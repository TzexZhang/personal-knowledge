# ============================================
# 生产环境配置示例
# ============================================

# 应用配置
APP_NAME=个人知识库
APP_ENV=production
DEBUG=False

# 数据库配置（从 PlanetScale Railway 获取）
# PlanetScale 格式: mysql+aiomysql://xxx:xxx@aws.connect.psdb.cloud/xxx
# Railway 格式: mysql+aiomysql://root:password@host:3306/dbname
DATABASE_URL=mysql+aiomysql://xxx:xxx@aws.connect.psdb.cloud/knowledge_db

# JWT 配置
SECRET_KEY=your-super-secret-key-change-in-production-123456
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置（请添加您的生产域名）
CORS_ORIGINS=["http://localhost:8096","https://your-frontend.vercel.app"]
CORS_ALLOW_CREDENTIALS=True

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=2097152
